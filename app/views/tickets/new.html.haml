.panel.panel-default
  .panel-heading{ style: "height: 35px; " }
    %h5.panel-title
      Новая поездка
      .pull-right
        %input.btn.btn-primary.btn-panel-heading#submit_ticket_form{:name => "commit", :type => "submit", :value => "Save", :style => "margin-top: -3px !important;"}
  .panel-body
    .row-fluid
      .span6.new_ticket
        = simple_form_for @ticket, id: 'ticket_form' do |f|
          = f.input :name, id: 'ticket_client_name', input_html: { class: 'input-block-level input-large'}, placeholder: "Имя", label: false
          = f.input :phone, input_html: {class: 'input-block-level input-large', placeholder: "Телефон"}, label: false
          = f.input :pick_up_location, input_html: { class: 'address-picker input-large input-block-level' , placeholder: "Адрес подачи"}, label: false
          %a.btn.btn-default{type: "button", style: "margin-bottom: 10px;"}
            .btn-centred-content
              %i.icon-globe
              Мое местоположение
          %br
          = f.input :drop_off_location, input_html: { class: 'address-picker input-large input-block-level' }, placeholder: "Адрес назначения", label: false
          = f.hidden_field :pick_up_time
          = f.hidden_field :pick_up_latlon
          = f.hidden_field :drop_off_latlon
          %a.btn.btn-default{type: "button", style: "margin-bottom: 10px;"}
            .btn-centred-content
              %i.icon-globe
              Мое местоположение
          %br
          #showSuggestionsModal.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "headerText", :role => "dialog", :style => "display: none;", :tabindex => "-1"}
            .modal-header
              %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
              %h3#headerText Select Address
              .modal-body
                .suggestionsBtnList
          %input#pickup_date.input-block-level.input-large.picker__input{:name => "pickup_date", :placeholder => "Pickup date", :readonly => "", :type => "text", :value => ""}
          %br
          %input#pickup_time.input-block-level.input-large.picker__input{:name => "pickup_time", :placeholder => "Время подачи", :readonly => "", :type => "text", :value => ""}
      .span6
        %textarea#ticket_note.input-block-level{:class => ".text-area-large", :name => "ticket[note]", :placeholder => "Note", :rows => "20", :style => "font-size: 22px"}
