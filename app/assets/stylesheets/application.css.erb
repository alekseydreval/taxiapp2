@font-face {
  font-family: 'ProximaNova-Extrabld';
  src:url('ProximaNova-Extrabld.otf');
  font-weight: normal;
  font-style: normal;
}

#map
{
 height: 605px;
}
#pdf_ignore {
  display: none;
}
body {
  background-image: url(<%= asset_path 'bg_pattern.gif' %> );
  background-repeat: repeat;
}
.btn-panel-heading{
  vertical-align: center !important;
  margin: -10px !important;
}
.chat-box {
  height: 250px;
  overflow: auto;
}
.fixed-height-380 {
  height: 380px;
  overflow: auto;
}

.leaflet-control-layers-expanded {
  width: 100px !important;
  height: 100px !important;
}

.input-location {
  width: 61%;
}

#use_my_location {
  margin: 7px 0 15px 0;
  display: block;
  width: 28px;
  height: 20px;
}

nav * {
  font-size: 20px;
}

.new_ticket input{
  display: block;
}


.input-append .btn {
  height: 40px;
}

.input-append .btn .btn-centred-content {
  margin-top: 10px;
}

.login-container {
  margin: 0 auto;
  width: 60%;
  margin-top: 10%;
}

.login_form {
  padding-left: 30px;
}

.login_form input {
  height: 35px !important;
}

.span6{
  margin: 0 !important;
}

.main-heading {
  font-family: ProximaNova-Extrabld, sans-serif;
  text-transform: uppercase;
  margin: 20px auto 0;
  font-size: 3.5em;
  text-align: center;
}

.logo {
  padding-top: 20px;
}

.new_ticket .control-group {
  margin-bottom: 0px;
}

.tickets_action_button {
  width: 120px;
  margin-top: 10px;
}

.left-panel {
  margin-right: 5px;
}

.right-panel {
  margin-left: 5px;
}

.panel-full-height { 
  height: 600px;
}

.panel-tickets-show-info {
  height: 250px;
}

.panel-tickets-show-assign {
  height: 350px;
}